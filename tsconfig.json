{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "outDir": "./out",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true
    },
    "include": [
        "src", "src/tests"
    ],
    "exclude": [
        "node_modules"
    ]
}